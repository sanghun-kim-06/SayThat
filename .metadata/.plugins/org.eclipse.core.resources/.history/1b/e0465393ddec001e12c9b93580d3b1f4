package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import common.DBUtils;


public class SayThatDao {
	public String userIdCheck() {
		Connection conn = null;
		PreparedStatement psmt = null;
		ResultSet rs = null;
		String userId = "";
		String result = "";
		System.out.println("유저 아이디 dao에서 체크합니다.");
		
		try {
			
			conn = DBUtils.getConnection();
			System.out.println("디비 연결 완료");
			String sql = " SELECT userid FROM USERS where userid = 2 ";
			
			psmt = conn.prepareStatement(sql);
			System.out.println("sql 실행 준비");
			rs = psmt.executeQuery();
			System.out.println("디비 실행 ");
			if(rs.next()) {
				userId = rs.getString("1");
				result = "사용 가능한 ID입니다.";
			}
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			DBUtils.close(conn, psmt, rs);
		}
		
		return result;
		

	}

}
